#topNav {
    display: flex;
    align-items: flex-end;
    background-color: #fff;
}
#topNav .navbar {
    width: 33%;
    text-align: center;
    height: 80%;
}
#topNav .navbar.active {
    border-bottom: 2px solid #00be8f;
}


.music-item {
    height: 110rpx;
    font-size: 16px;
    padding-left: 110rpx;
    background-image: url("data:image/png;base64,");
    background-position: 15rpx center;
    background-repeat: no-repeat;
    background-size: 72rpx 71rpx;
    border-bottom: 1px solid #1e1e1e
}
.music-item .album-title {
    height: 60rpx;
