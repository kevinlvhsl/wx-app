<!-- 利用列表图片加载，绑定图片的load事件，分别向两列中添加分栏 -->
<view style="display:none">
  <image wx:for="{{images}}" wx:key="{{item.id}}" id="{{item.id}}" src="{{item.img}}" bindload="onImageLoad"></image>
</view>
<scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages">
  <view style="width:100%">
    <view class="img_item">
      <view wx:for="{{col1}}" wx:key="{{item.id}}">
        <image src="{{item.img}}" style="width:100%;height:{{item.height}}px"></image>
      </view>
    </view>
    <view class="img_item">
      <view wx:for="{{col2}}" wx:key="{{item.id}}">
        <image src="{{item.img}}" style="width:100%;height:{{item.height}}px"></image>
      </view>
    </view>
  </view>
</scroll-view>
