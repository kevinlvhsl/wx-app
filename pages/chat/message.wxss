page {
    background-color: #fff;
}
.msg-item {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
}

.avatar {
    order: 1;
    width: 85rpx;
    height: 85rpx;
    padding: 20rpx;
    display: inline-block;
}

.message {
    order: 3;
    min-height: 100rpx;
    max-width: 510rpx;
    word-break: break-all;
    padding: 20rpx;
    margin-top: 15rpx;
    border-radius: 10rpx;
    background-color: #41d1ad;
}
.triangle {
    order: 2;
    border-top: 8px solid transparent;
    border-bottom: 8px solid transparent;
    border-right: 12px solid #41d1ad;
    margin-top: 42rpx;
    width: 0;
    height: 0;

}


.msg-item.isme {
    justify-content: flex-end;
}
.msg-item.isme .avatar {
    order: 3;
}
.msg-item.isme .message {
    order: 1;
}
.msg-item.isme .triangle {
    order: 2;
    border-right: none;
    border-left: 12px solid #41d1ad;
}

.elsePanel {
    height: 150px;
    background-color: #fff;
}

.else-row {
    line-height: 40rpx;
}
.moreImage{
    width: 40px;
    height: 40px;
    padding: 8px;
    border: 1px solid #e3e3e3;
    border-radius: 10px;
    background: #f3f3f3;
    margin: 5px;
}
.emotionPanel {
    padding: 20rpx;
    height: 150px;
    flex-wrap: wrap;
    display: flex;
    background-color: #fff;
}
.emotion {
    height: 60rpx;
    width: 60rpx;
    margin: 10rpx;
}
.map-box {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 110;
    background-color: rgba(0, 0, 0, 0.6)
}
.map-box .map-wrap {
    position: absolute;
    height: 100%;
    width: 100%;
    z-index: 1;
    top: 0;
}
.map-box .close {
    position: absolute;
    bottom: 0;
    z-index: 11;
    background-color: rgba(255, 255, 255, .6);
    border-radius: 12rpx;
}

.wa-row {
    display: flex;
    height: 50px;
    padding: 10rpx;
    background-color: #fff;
}

.input-box {
    flex: 1;
    height: 80rpx;
    padding: 10rpx;
    border-bottom: 1px solid;
}
.input-box input {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 14px;
}



