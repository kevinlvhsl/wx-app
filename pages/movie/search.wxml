<view class="page-bg">
  <view class="section-search">
    <input class="mv-search" bindinput="bindKeyInput"
      placeholder="电影名称或导演名" maxlength="20"  focus="{{focus}}"  />
    <icon type="search" size="26" bindtap="searchMovie"/>
  </view>
  <view class="search-tip" wx:if="{{!searching}}">
    搜索 "{{keyword}}" 的结果
  </view>
  <view class="ms-wrap" wx:if="{{searchs.subjects.length > 0}}">
    <view class="mov" wx:for="{{searchs.subjects}}" wx:key="{{item.id}}" wx:for-item="item"
      bindtap="goMovieDetail"data-id="{{item.id}}">
      <image class="mov-avatar" src="{{item.images.small}}" background-size="cover"></image>
      <text class="mov-title" >{{item.title}}</text>
    </view>
  </view>
  <view wx:if="{{searchs.subjects.length === 0}}">暂时没有结果</view>
</view>
